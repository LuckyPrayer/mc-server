# Environment Configuration
# Copy this file to .env and customize for your environment

# ========================================
# HARBOR REGISTRY CONFIGURATION
# ========================================

# Harbor Development Registry
HARBOR_DEV_URL=harbor.dev.thebozic.com
HARBOR_DEV_PROJECT=mc-server

# Harbor Production Registry
HARBOR_PROD_URL=harbor.prod.thebozic.com
HARBOR_PROD_PROJECT=mc-server

# ========================================
# PRODUCTION SECRETS (REQUIRED FOR PRODUCTION)
# ========================================

# RCON Password for production - MUST be changed for production use
# Generate a strong password: openssl rand -base64 32
RCON_PASSWORD=

# ========================================
# DEVELOPMENT SETTINGS
# ========================================

# Development RCON password
DEV_RCON_PASSWORD=devpass

# ========================================
# SERVER CONFIGURATION
# ========================================

# Minecraft version (e.g., LATEST, 1.21, 1.20.4)
MC_VERSION=LATEST

# Server type (VANILLA, PAPER, SPIGOT, FORGE, FABRIC, PURPUR)
MC_SERVER_TYPE=PAPER

# ========================================
# MEMORY SETTINGS
# ========================================

# Development memory
DEV_MEMORY=1G
DEV_MAX_MEMORY=2G

# Production memory
PROD_MEMORY=4G
PROD_MAX_MEMORY=8G

# ========================================
# NETWORK SETTINGS
# ========================================

# Development ports
DEV_MINECRAFT_PORT=25565
DEV_RCON_PORT=25575

# Production ports
PROD_MINECRAFT_PORT=25565
PROD_RCON_PORT=25575

# ========================================
# BUILD CONFIGURATION
# ========================================

# Image version tag
IMAGE_VERSION=latest

# Enable multi-platform builds (true/false)
MULTIPLATFORM_BUILD=false

# ========================================
# SERVER CONFIGURATION VARIABLES
# ========================================

# Server identity
SERVER_NAME=My Minecraft Server
MOTD=Welcome to my Minecraft server!
SERVER_IP=
SERVER_WEBSITE=https://example.com

# Gameplay settings
GAMEMODE=survival
DIFFICULTY=normal
HARDCORE=false
PVP=true
MAX_PLAYERS=20

# World settings
LEVEL_NAME=world
LEVEL_SEED=
LEVEL_TYPE=minecraft:normal
ALLOW_NETHER=true
ALLOW_END=true
ALLOW_FLIGHT=false
SPAWN_MONSTERS=true
SPAWN_PROTECTION=16

# Performance settings
VIEW_DISTANCE=10
SIMULATION_DISTANCE=10
MAX_TICK_TIME=60000
ENABLE_COMMAND_BLOCK=true

# Network settings
SERVER_PORT=25565
ONLINE_MODE=true
PLAYER_IDLE_TIMEOUT=0

# Whitelist
WHITELIST_ENABLED=false
ENFORCE_WHITELIST=false
WHITELIST_MESSAGE=You are not whitelisted on this server!

# RCON settings
ENABLE_RCON=true
RCON_PORT=25575

# ========================================
# PLUGIN CONFIGURATION VARIABLES
# ========================================

