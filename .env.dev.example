# Development Environment Configuration
# This file extends .env with development-specific overrides

# Environment marker
ENVIRONMENT=dev

# Server identity
SERVER_NAME=[DEV] Minecraft Server
MOTD=§e[DEVELOPMENT] §fWelcome to the dev server!

# Relaxed gameplay for development
GAMEMODE=creative
DIFFICULTY=peaceful
PVP=false
ONLINE_MODE=false
MAX_PLAYERS=10

# Development world
LEVEL_NAME=world-dev
ALLOW_FLIGHT=true
SPAWN_PROTECTION=0
MAX_TICK_TIME=-1

# Lower resource usage for development
VIEW_DISTANCE=8
SIMULATION_DISTANCE=8

# Development ports (same as production by default, change if needed)
SERVER_PORT=25565
RCON_PORT=25575

# BlueMap development settings
BLUEMAP_ACCEPT_DOWNLOAD=true
BLUEMAP_PORT=8100
BLUEMAP_RENDER_THREADS=2
BLUEMAP_WEBSERVER_ENABLED=true
BLUEMAP_WEBAPP_ENABLED=true

# Geyser development settings  
GEYSER_PORT=19132
GEYSER_AUTH_TYPE=floodgate
GEYSER_DEBUG=true
GEYSER_SHOW_COORDINATES=true
GEYSER_LOG_PLAYER_IPS=false

# Floodgate development settings
FLOODGATE_LINKING_ENABLED=true
FLOODGATE_REQUIRE_LINK=false

# DiscordSRV development settings
DISCORD_CHAT_REQUIRE_LINKED=false
DISCORD_CHAT_CONSOLE_COMMANDS_ENABLED=true

# Debug settings
DEBUG=true
TIMINGS_ENABLED=true
LOG_PLAYER_IPS=false

# Development-friendly settings
SPAWN_MONSTERS=false
ANTI_XRAY_ENABLED=false
