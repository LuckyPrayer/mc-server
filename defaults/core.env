#!/bin/bash
# Core Server Default Environment Variables
# These are essential variables that every Minecraft server deployment needs
# Documentation: https://minecraft.fandom.com/wiki/Server.properties

# ========================================
# ESSENTIAL SERVER SETTINGS
# ========================================

# Game Mode: survival, creative, adventure, spectator
export GAMEMODE="${GAMEMODE:-survival}"

# Difficulty: peaceful, easy, normal, hard
export DIFFICULTY="${DIFFICULTY:-normal}"

# PvP enabled
export PVP="${PVP:-true}"

# Hardcore mode (death = ban)
export HARDCORE="${HARDCORE:-false}"

# ========================================
# SERVER CAPACITY & PERFORMANCE
# ========================================

# Maximum number of players
export MAX_PLAYERS="${MAX_PLAYERS:-20}"

# View distance (in chunks, 3-32)
export VIEW_DISTANCE="${VIEW_DISTANCE:-10}"

# Simulation distance (in chunks, 3-32)
export SIMULATION_DISTANCE="${SIMULATION_DISTANCE:-10}"

# ========================================
# ACCESS CONTROL
# ========================================

# Online mode (Mojang authentication)
export ONLINE_MODE="${ONLINE_MODE:-true}"

# Whitelist enabled (disabled by default for easier setup)
export WHITELIST_ENABLED="${WHITELIST_ENABLED:-false}"

# Enforce whitelist (kick non-whitelisted players)
export ENFORCE_WHITELIST="${ENFORCE_WHITELIST:-false}"

# Whitelist kick message
export WHITELIST_MESSAGE="${WHITELIST_MESSAGE:-You are not whitelisted on this server!}"

# ========================================
# WORLD SETTINGS
# ========================================

# World name
export LEVEL_NAME="${LEVEL_NAME:-world}"

# World type: minecraft:normal, minecraft:flat, minecraft:large_biomes, minecraft:amplified
export LEVEL_TYPE="${LEVEL_TYPE:-minecraft:normal}"

# World seed (leave empty for random)
export LEVEL_SEED="${LEVEL_SEED:-}"

# Generate structures (villages, etc.)
export GENERATE_STRUCTURES="${GENERATE_STRUCTURES:-true}"

# Spawn protection radius (0 to disable)
export SPAWN_PROTECTION="${SPAWN_PROTECTION:-16}"

# ========================================
# MOB SPAWNING
# ========================================

# Allow hostile mobs
export SPAWN_MONSTERS="${SPAWN_MONSTERS:-true}"

# Allow passive mobs
export SPAWN_ANIMALS="${SPAWN_ANIMALS:-true}"

# Allow NPCs (villagers)
export SPAWN_NPCS="${SPAWN_NPCS:-true}"

# ========================================
# RCON (Remote Console)
# ========================================

# Enable RCON for remote management
export ENABLE_RCON="${ENABLE_RCON:-true}"

# RCON port
export RCON_PORT="${RCON_PORT:-25575}"

# RCON password (CHANGE THIS IN PRODUCTION!)
export RCON_PASSWORD="${RCON_PASSWORD:-minecraft}"

# Broadcast RCON to ops
export BROADCAST_RCON_TO_OPS="${BROADCAST_RCON_TO_OPS:-true}"

# ========================================
# NETWORK SETTINGS
# ========================================

# Server port
export SERVER_PORT="${SERVER_PORT:-25565}"

# Server IP (leave empty to bind to all)
export SERVER_IP="${SERVER_IP:-}"

# Max tick time (watchdog, -1 to disable)
export MAX_TICK_TIME="${MAX_TICK_TIME:-60000}"

# Network compression threshold (bytes, -1 to disable)
export NETWORK_COMPRESSION_THRESHOLD="${NETWORK_COMPRESSION_THRESHOLD:-256}"

# ========================================
# MISC SETTINGS
# ========================================

# Server MOTD
export MOTD="${MOTD:-A Minecraft Server}"

# Allow flight (for non-creative mode)
export ALLOW_FLIGHT="${ALLOW_FLIGHT:-false}"

# Allow nether
export ALLOW_NETHER="${ALLOW_NETHER:-true}"

# Allow end
export ALLOW_END="${ALLOW_END:-true}"

# Enable command blocks
export ENABLE_COMMAND_BLOCK="${ENABLE_COMMAND_BLOCK:-false}"

# Max world size (in blocks, radius)
export MAX_WORLD_SIZE="${MAX_WORLD_SIZE:-29999984}"
