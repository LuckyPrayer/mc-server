#!/bin/bash
# Floodgate Plugin Default Environment Variables
# Only loaded if /templates/plugins/Floodgate directory exists
# Floodgate allows Bedrock players to join without a Java Edition account
# Documentation: https://wiki.geysermc.org/floodgate/

# ========================================
# FLOODGATE SETTINGS
# ========================================

# Username prefix for Bedrock players (empty = no prefix)
export FLOODGATE_USERNAME_PREFIX="${FLOODGATE_USERNAME_PREFIX:-.}"

# Replace spaces in Bedrock usernames
export FLOODGATE_REPLACE_SPACES="${FLOODGATE_REPLACE_SPACES:-true}"

# Enable Floodgate
export FLOODGATE_ENABLED="${FLOODGATE_ENABLED:-true}"
