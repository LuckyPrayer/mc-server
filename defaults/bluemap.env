#!/bin/bash
# BlueMap Plugin Default Environment Variables
# Only loaded if /templates/plugins/BlueMap directory exists
# BlueMap creates 3D web-based maps of your Minecraft world
# Documentation: https://bluemap.bluecolored.de/wiki/

# ========================================
# CORE SETTINGS
# ========================================

# Accept BlueMap download (required)
export BLUEMAP_ACCEPT_DOWNLOAD="${BLUEMAP_ACCEPT_DOWNLOAD:-true}"

# Data folder for BlueMap files
export BLUEMAP_DATA_FOLDER="${BLUEMAP_DATA_FOLDER:-bluemap}"

# Enable metrics (anonymous usage statistics)
export BLUEMAP_METRICS="${BLUEMAP_METRICS:-true}"

# Update settings file automatically
export BLUEMAP_UPDATE_SETTINGS_FILE="${BLUEMAP_UPDATE_SETTINGS_FILE:-true}"

# Scan mod resources for blocks
export BLUEMAP_SCAN_MOD_RESOURCES="${BLUEMAP_SCAN_MOD_RESOURCES:-true}"

# ========================================
# RENDERING SETTINGS
# ========================================

# Number of render threads (0 = auto)
export BLUEMAP_RENDER_THREADS="${BLUEMAP_RENDER_THREADS:-0}"

# ========================================
# MAP RESOLUTION SETTINGS
# ========================================

# Hi-res tile resolution (default: 0.5 blocks per pixel)
export BLUEMAP_HIRES_DEFAULT="${BLUEMAP_HIRES_DEFAULT:-100}"

# Hi-res minimum resolution
export BLUEMAP_HIRES_MIN="${BLUEMAP_HIRES_MIN:-0}"

# Hi-res maximum resolution
export BLUEMAP_HIRES_MAX="${BLUEMAP_HIRES_MAX:-500}"

# Low-res tile resolution (default: 4 blocks per pixel)
export BLUEMAP_LOWRES_DEFAULT="${BLUEMAP_LOWRES_DEFAULT:-2000}"

# Low-res minimum resolution
export BLUEMAP_LOWRES_MIN="${BLUEMAP_LOWRES_MIN:-500}"

# Low-res maximum resolution
export BLUEMAP_LOWRES_MAX="${BLUEMAP_LOWRES_MAX:-7000}"

# ========================================
# WEB INTERFACE SETTINGS
# ========================================

# Enable web application
export BLUEMAP_WEBAPP_ENABLED="${BLUEMAP_WEBAPP_ENABLED:-true}"

# Web root directory
export BLUEMAP_WEBROOT="${BLUEMAP_WEBROOT:-bluemap/web}"

# Use cookies for settings storage
export BLUEMAP_USE_COOKIES="${BLUEMAP_USE_COOKIES:-true}"

# Enable built-in web server
export BLUEMAP_WEBSERVER_ENABLED="${BLUEMAP_WEBSERVER_ENABLED:-true}"

# Web server port
export BLUEMAP_PORT="${BLUEMAP_PORT:-8100}"

# Default view type: false, flat, free
export BLUEMAP_DEFAULT_FLAT_VIEW="${BLUEMAP_DEFAULT_FLAT_VIEW:-false}"

# Starting location (x:y:z)
export BLUEMAP_START_LOCATION="${BLUEMAP_START_LOCATION:-0:100:0}"

# ========================================
# ZOOM SETTINGS
# ========================================

# Minimum zoom level
export BLUEMAP_MIN_ZOOM="${BLUEMAP_MIN_ZOOM:-0}"

# Maximum zoom level
export BLUEMAP_MAX_ZOOM="${BLUEMAP_MAX_ZOOM:-5}"

# Default zoom level
export BLUEMAP_RESOLUTION_DEFAULT="${BLUEMAP_RESOLUTION_DEFAULT:-1}"

# ========================================
# LOGGING SETTINGS
# ========================================

# Log file path
export BLUEMAP_LOG_FILE="${BLUEMAP_LOG_FILE:-bluemap.log}"

# Append to log file instead of overwriting
export BLUEMAP_LOG_APPEND="${BLUEMAP_LOG_APPEND:-true}"

# Web server log file
export BLUEMAP_WEBSERVER_LOG_FILE="${BLUEMAP_WEBSERVER_LOG_FILE:-webserver.log}"

# Append to web server log
export BLUEMAP_WEBSERVER_LOG_APPEND="${BLUEMAP_WEBSERVER_LOG_APPEND:-true}"

# Web server log format
export BLUEMAP_WEBSERVER_LOG_FORMAT="${BLUEMAP_WEBSERVER_LOG_FORMAT:-%1\$s \"%2\$s %3\$s %4\$s\" %5\$s %6\$s %7\$s %8\$s}"
