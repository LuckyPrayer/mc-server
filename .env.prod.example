# Production Environment Configuration
# This file extends .env with production-specific overrides

# Environment marker
ENVIRONMENT=prod

# Server identity (set your real values here)
SERVER_NAME=My Production Server
MOTD=ยง6Welcome to our Minecraft server!
SERVER_IP=play.example.com
SERVER_WEBSITE=https://example.com

# Production gameplay
GAMEMODE=survival
DIFFICULTY=hard
PVP=true
ONLINE_MODE=true
MAX_PLAYERS=50

# Production world
LEVEL_NAME=world
ALLOW_FLIGHT=false
SPAWN_PROTECTION=16
MAX_TICK_TIME=60000

# Production performance
VIEW_DISTANCE=12
SIMULATION_DISTANCE=10

# Production ports
SERVER_PORT=25565
RCON_PORT=25575

# Whitelist for production (optional)
WHITELIST_ENABLED=false
ENFORCE_WHITELIST=false

# BlueMap production settings
BLUEMAP_ACCEPT_DOWNLOAD=true
BLUEMAP_PORT=8100
BLUEMAP_RENDER_THREADS=4
BLUEMAP_WEBSERVER_ENABLED=true
BLUEMAP_WEBAPP_ENABLED=true
BLUEMAP_METRICS=true

# Discord integration (REQUIRED - configure your bot)
DISCORD_BOT_TOKEN=your_bot_token_here
DISCORD_CHAT_CHANNEL_ID=your_channel_id_here
DISCORD_CONSOLE_CHANNEL_ID=your_console_channel_id_here
DISCORD_GUILD_ID=your_guild_id_here
DISCORD_INVITE_LINK=Your Discord Server
DISCORD_WEBHOOK_DELIVERY=true
DISCORD_CHAT_REQUIRE_LINKED=false
DISCORD_CHAT_CONSOLE_COMMANDS_ENABLED=false
DISCORD_WATCHDOG_ENABLED=true

# Geyser production settings
GEYSER_PORT=19132
GEYSER_AUTH_TYPE=floodgate
GEYSER_DEBUG=false
GEYSER_COMPRESSION_LEVEL=6
GEYSER_PASSTHROUGH_MOTD=true
GEYSER_PASSTHROUGH_PLAYER_COUNTS=true
GEYSER_LOG_PLAYER_IPS=true
GEYSER_METRICS=true

# Floodgate production settings
FLOODGATE_LINKING_ENABLED=true
FLOODGATE_REQUIRE_LINK=false
FLOODGATE_ENABLE_GLOBAL_LINKING=true
FLOODGATE_METRICS=true

# Production security
ENFORCE_WHITELIST=false
PREVENT_PROXY_CONNECTIONS=false

# Production performance tuning
MAX_CHUNK_GENERATE_RATE=-1.0
MAX_CHUNK_LOAD_RATE=100.0
MAX_CHUNK_SEND_RATE=75.0
ENTITY_ACTIVATION_ANIMALS=32
ENTITY_ACTIVATION_MONSTERS=32

# Spawn limits (tuned for production)
SPAWN_LIMIT_MONSTERS=70
SPAWN_LIMIT_ANIMALS=10
SPAWN_LIMIT_WATER_ANIMALS=5
SPAWN_LIMIT_AMBIENT=15

# Anti-cheat
ANTI_XRAY_ENABLED=true
ANTI_XRAY_ENGINE_MODE=2

# Monitoring
DEBUG=false
TIMINGS_ENABLED=true
LOG_PLAYER_IPS=true
METRICS_ENABLED=true

# Optimize for production
SPAWN_MONSTERS=true
OPTIMIZE_EXPLOSIONS=true
