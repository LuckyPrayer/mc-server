# Example server.properties configuration
# This file is optional - the server will generate one automatically
# Place this in config/ directory if you want to use custom settings

# Server Settings
server-port=25565
max-players=20
motd=A Minecraft Server
difficulty=normal
gamemode=survival
pvp=true
online-mode=true

# World Settings
level-name=world
level-seed=
level-type=default
generate-structures=true
allow-nether=true
allow-flight=false

# Performance
view-distance=10
simulation-distance=10
max-tick-time=60000
spawn-protection=16

# Network
network-compression-threshold=256
max-world-size=29999984

# Other
enable-command-block=true
enable-query=false
enable-rcon=true
rcon.password=minecraft
rcon.port=25575
broadcast-console-to-ops=true
op-permission-level=4
function-permission-level=2
